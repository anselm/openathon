<h1>Login</h1>

<p>Or <%= link_to "Signup instead?", signup_path %></p>

<% form_for UserSession.new, :url => user_session_path do |f| %>
  <%= f.error_messages %>
  <%= f.label :email %><br />
  <%= f.text_field :email %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  <br />
  <%= f.submit "Login" %>

<p>Forgot your password? <%= link_to "Click here", password_resets_path %>
<% end %>
