<% @team = Team.first(@user.team_id) %>
<% if @team %>
Your team is here <%= link_to @team.title, "/teams/#{@team.id}" %> 
<% else %>
Start a team! <%= link_to "New team", new_team_path %>
<% end %>
<hr>

<% if @user.photo.exists? then %>
<p>Small:<%= image_tag @user.photo.url(:small) %></p>
<p>Medium:<%= image_tag @user.photo.url(:medium) %></p>
<% else %>
<p> There are no photo's attached, upload one. </p>
<% end %>

<p>
  <b>Login email:</b>
  <%=h @user.email %>
</p>

<p>
  <b>Login count:</b>
  <%=h @user.login_count %>
</p>

<p>
  <b>Last request at:</b>
  <%=h @user.last_request_at %>
</p>

<p>
  <b>Last login at:</b>
  <%=h @user.last_login_at %>
</p>

<p>
  <b>Current login at:</b>
  <%=h @user.current_login_at %>
</p>

<p>
  <b>Last login ip:</b>
