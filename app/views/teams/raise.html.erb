<%#
Raise support for your team
%>

<h1>Raise funds for
<% if @team %>
 <%= @team.name %>!</h1>
<% end %>

<% if flash[:email_errors] %>
  <h3 style="color:red">Invalid email addresses entered. Please correct and resubmit.</h3>
  <% flash[:email_errors].each do |email| %>
    <pre><%= email %></pre><br/>
  <% end %>
<% end %>

<% if flash[:no_emails] %>
  <h3 style="color:red">Please enter at least one email address.</h3>
<% end %>

<!-- TODO:  gmail and other contact import -->
<% form_tag :action => 'raise_confirm', :method => 'post' do -%>

  <h2>We'll send out this message to your fund raisers. Feel free to edit it first.</h2>

  <%=  text_area_tag :user_message, @body, :cols => 80, :rows => 15 %><br />

  <h2>Enter email addresses of your friends in the box below.</h2>
  Put each address on its own line.<br/>


  <%= text_area_tag :email_blob, @recipients.join("\n"), :cols => 40, :rows => 10 %>
  <%= submit_tag "Invite!" %>
<%end%>



